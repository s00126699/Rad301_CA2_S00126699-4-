@model S00126699_CA2.Models.Movie

@{
    ViewBag.Title = "Delete";
}
<div align="center">
    <h2>Delete</h2>

    <h3>Are you sure you want to delete this?</h3>
    <fieldset>
        <legend>Movie</legend>

        <div class="display-label">
            <h2><b> @Html.DisplayNameFor(model => model.MoviesName)</b></h2>
        </div>
        <div class="display-field">
            @Html.DisplayFor(model => model.MoviesName)
        </div>

        <div class="display-label">
            <h2><b> @Html.DisplayNameFor(model => model.Description)</b></h2>
        </div>
        <div class="display-field">
            @Html.DisplayFor(model => model.Description)
        </div>
    </fieldset>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="btn-group" data-toggle="buttons">
            <label class="pdsa-radiobutton btn btn-default active">
                <span class="glyphicon glyphicon-ok"></span>
                <input type="submit" value="Delete" />
            </label>
        </div>


        <div class="btn-group" data-toggle="buttons">
            <label class="pdsa-radiobutton btn btn-danger active">
                <span class="glyphicon glyphicon-remove"></span>
                @Html.ActionLink("Cancel", "Index")
            </label>
        </div>

    }
</div>